<form method="POST">
  <div class="form-group">
    <label for="first">first:</label>
    <input id="first" name="first" {{#contact}} value="{{contact.first}}"{{/contact}}>
  </div>
  <div class="form-group">
    <label for="last">last:</label>
    <input id="last" name="last" required {{#contact}} value="{{contact.last}}"{{/contact}}>
  </div>
  <div class="form-group">
    <label for="email">email:</label>
    <input id="email" name="email" type="email" {{#contact}} value="{{contact.email}}"{{/contact}}>
  </div>
  <div class="form-group">
    <label for="phone">phone:</label>
    <input id="phone" name="phone" type="tel" minlength="10" {{#contact}} value="{{contact.phone}}"{{/contact}}>
  </div>

  <a href="/">cancel</a>
  <button type="reset">reset</button>
  <button>add</button>
</form>
